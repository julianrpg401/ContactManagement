@{
    ViewData["Title"] = "Home Page";
}

@model ContactManagement.Models.Contact

<form name="AddContact" asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="@Model.FirstName" class="control-label">Nombre</label>
        <input asp-for="@Model.FirstName" class="form-control" type="text" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName" class="control-label">Apellido</label>
        <input asp-for="@Model.LastName" class="form-control" type="text" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email" class="control-label">Email</label>
        <input asp-for="@Model.Email" class="form-control" type="text" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Phone" class="control-label">Celular</label>
        <input asp-for="@Model.Phone" class="form-control" type="text" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Address" class="control-label">Dirección</label>
        <input asp-for="@Model.Address" class="form-control" type="text" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.City" class="control-label">Ciudad</label>
        <input asp-for="@Model.City" class="form-control" type="text" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>
<br />
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
